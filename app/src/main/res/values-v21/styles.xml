<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    <item name="colorPrimary">@color/colorPrimary01</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:buttonStyle">@style/AppTheme.Button</item>
    <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>-->
  </style>

  <!-- Used for styling deprecated non-AppCompat activities, such as PreferenceActivity. -->
  <style name="AppThemeDeprecated" parent="AppTheme.AppBarOverlay">

  </style>

  <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">@color/buttonBlue</item>
    <item name="android:backgroundTint">@color/buttonBlue</item>
  </style>

  <!-- These are the main filled buttons. -->
  <style name="AppTheme.ButtonPrimary" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">@color/buttonBlue</item>
        <item name="android:textColor">@color/white</item>
    <item name="android:backgroundTint">@color/buttonBlue</item>
  </style>

  <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="android:windowBackground">@drawable/background_splash</item>
  </style>
  <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light" />

</resources>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createNewWorkoutLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        tools:context="com.musclehack.targetedHypertrophyTraining.workoutTracker.workouts.CreateNewWorkoutFragment">

        <TextView
            android:id="@+id/workout_name_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/workout_name_prompt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/workout_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Monday"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workout_name_prompt" />

        <TextView
            android:id="@+id/workout_repeats_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:text="@string/workout_repeats_prompt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workout_name_txt"
            android:layout_marginStart="16dp" />

        <EditText
            android:id="@+id/workout_repeats_txt"
            android:layout_width="25dp"
            android:layout_height="38dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="number"
            android:text="1"
            android:hint="1"
            android:background="@drawable/input_text_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workout_repeats_prompt"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/repeatInputWarningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="68dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="68dp"
            android:layout_marginStart="8dp"
            android:text="@string/repeat_input_warning"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/workout_repeats_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:textColor="#ff0000"
            app:layout_constraintStart_toEndOf="@+id/workout_repeats_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

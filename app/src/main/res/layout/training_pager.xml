<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.musclehack.targetedHypertrophyTraining.workoutTracker.training.TrainingViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="com.musclehack.targetedHypertrophyTraining.workoutTracker.training.TrainingPagerFragment">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/trainingPager"
            android:layout_below="@id/tabs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/justMoved2">

        </androidx.viewpager2.widget.ViewPager2>

        <LinearLayout
            android:id="@+id/timerBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tabs"
            android:orientation="horizontal"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:paddingLeft="8dip"
            android:paddingStart="8dip"
            android:paddingRight="5dip"
            android:paddingEnd="5dip"
            android:layout_marginBottom="4dip"
            android:visibility="invisible"
            android:background="@drawable/overlay_timer_background">

            <TextView
                android:id="@+id/overlayRestTimeText"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="1:56"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:paddingTop="6dip"
                android:layout_marginRight="1dip"
                android:layout_marginEnd="1dip"
                android:layout_weight="40" />

            <ImageButton
                android:id="@+id/playIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow_white_24dp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/pauseIcon"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pause_white_24dp"
                android:layout_weight="30" />

            <ImageButton
                android:id="@+id/stopIcon"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stop_white_24dp"
                android:layout_weight="30" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/trainingPagerProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible" />

    </RelativeLayout>
</layout>
